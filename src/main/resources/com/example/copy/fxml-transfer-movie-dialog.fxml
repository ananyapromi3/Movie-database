<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<DialogPane expanded="true" prefHeight="250.0" prefWidth="600.0" style="-fx-border-color: white; -fx-border-width: 10; -fx-background-color: black;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TransferMovieController">
    <content>
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="600.0">
            <children>
            <ImageView fitHeight="144.0" fitWidth="154.0" layoutX="445.0" layoutY="143.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@filmroll.jpeg" />
               </image>
            </ImageView>
                <Label fx:id="movieTitle" alignment="CENTER" contentDisplay="CENTER" opacity="0.8" prefHeight="90.0" prefWidth="600.0" style="-fx-background-color: #6C1C0A#6C1C0A; -fx-border-color: white;" text="Movie Title" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font size="40.0" />
                    </font>
                </Label>
            <Label layoutX="50.0" layoutY="120.0" opacity="0.8" prefHeight="50.0" prefWidth="500.0" style="-fx-background-color: white; -fx-background-radius: 30;" text="   Transfer to : ">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
                <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="150.0" layoutY="210.0" prefHeight="30.0" prefWidth="300.0" text="Please insert a valid number" textFill="#d8822b" visible="false" wrapText="true">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <Button fx:id="cancelButton" layoutX="350.0" layoutY="200.0" onAction="#cancel" opacity="0.9" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #6C1C0A#6C1C0A; -fx-background-radius: 30; -fx-border-color: white; -fx-border-radius: 30; -fx-border-width: 1;" text="Cancel" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Button>
                <Button fx:id="confirmButton" layoutX="100.0" layoutY="200.0" onAction="#confirm" opacity="0.9" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #6C1C0A#6C1C0A; -fx-background-radius: 30; -fx-border-color: white; -fx-border-radius: 30; -fx-border-width: 1;" text="Confirm" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Button>
            <ChoiceBox fx:id="productionCompanyList" layoutX="245.0" layoutY="125.0" opacity="0.8" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #6C1C0A; -fx-background-radius: 30; -fx-border-color: black; -fx-border-radius: 30;" />
            </children>
        </AnchorPane>
    </content>
</DialogPane>
