                  <Font name="System Bold" size="18.0" />
               </font>
               <graphic>
                  <ImageView blendMode="MULTIPLY" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@cross.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <ImageView fx:id="moviePoster" fitHeight="322.0" fitWidth="250.0" layoutY="100.0" pickOnBounds="true" preserveRatio="true">
